<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_vertical"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:paddingVertical="15dp"
        android:text="Visual Brick Help"
        android:textColor="@color/cherryWienerberger"
        android:textSize="22sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="25dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/help_card_take_a_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Examples of pictures"
                android:textSize="15dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/white"
                android:background="@color/cherryWienerberger"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textSize="14dp"
                android:layout_marginLeft="3dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"
                android:padding="12dp"
                android:layout_marginTop="5dp"
                android:text="Good"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="-10dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/good_example_1" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/good_example_2"
                    android:layout_marginLeft="25dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/good_example_3" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/good_example_4"
                    android:layout_marginLeft="25dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_medium"
                android:padding="12dp"
                android:text="To get the best results, please follow instructions:\n\n1. Crop picture so it shows only either brick\n     or roof tile.\n2. Picture of bricks must be oriented\n    straight.\n3. Pictures of bricks taken from angle will\n    affect the results negatively.\n4. Pictures of roof tiles can be taken from\n    angle."
                android:textColor="@color/black"
                android:textSize="10dp"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="-10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>




</LinearLayout>
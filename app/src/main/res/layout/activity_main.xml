<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activit_ymain_btn_take_photo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Tap to find !"
        android:textColor="#95FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/activit_ymain_btn_take_photo"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/circular_button"
        android:src="@drawable/logo" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/activity_main_view_btmnav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#F9C8A7"
        app:itemIconTint="@color/wienerberger"
        app:itemRippleColor="#F37B2C"
        app:itemTextColor="@color/wienerberger"
        app:menu="@menu/main_menu"/>

</RelativeLayout>
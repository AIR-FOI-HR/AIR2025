<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_vertical"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textAlignment="center">
            <TextView
                android:id="@+id/popup_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Welcome!"
                android:textSize="20dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/white"
                android:background="@color/cherryWienerberger"
                />

            <TextView
                android:id="@+id/help_card_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"
                android:padding="12dp"
                android:textSize="13dp"
                android:text="Thank you for using Visual Brick Finder! \nBefore you start, would you like to take a look at our help section?"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="5dp"
                android:layout_marginTop="-10dp"
                android:padding="12dp">
                <Button
                    android:id="@+id/popup_close"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="No, thanks"
                    android:textAllCaps="false"
                    android:textColor="@color/black"/>
                <Button
                    android:id="@+id/popup_show_help"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Show me"
                    android:textAllCaps="false"
                    android:layout_marginLeft="83dp"
                    android:textColor="@color/black"/>
            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>




</LinearLayout>
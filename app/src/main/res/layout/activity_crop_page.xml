<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F37B2B"
    tools:context=".CropPageActivity">



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_centerVertical="true"
        android:contentDescription="@string/photo_crop" />

    <Button
        android:id="@+id/buttonAcceptCropped"

        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/imageView"
        android:layout_marginTop="30dp"
        android:text="Crop"
        />

    <Button
        android:id="@+id/buttonCropAgain"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/imageView"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@id/buttonAcceptCropped"
        android:layout_toRightOf="@id/buttonAcceptCropped"
        android:text="Refuse"
        />

</RelativeLayout>